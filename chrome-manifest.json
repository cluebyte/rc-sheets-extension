{
  "manifest_version": 3,
  "icons": {
    "16": "icon16.png",
    "24": "icon24.png",
    "32": "icon32.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "name": "RC Sheets to Roll20",
  "version": "1.0",
  "description": "Click skills in RC Sheets to trigger Roll20 macros.",
  "permissions": ["tabs", "scripting"],
  "host_permissions": [
    "https://repair-crew-sheets-1zhn.vercel.app/*",
    "https://app.roll20.net/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://repair-crew-sheets-1zhn.vercel.app/*"],
      "js": ["content-sheet.js"]
    },
    {
      "matches": ["https://app.roll20.net/*"],
      "js": ["content-roll20.js"]
    }
  ]
}
